		<div class="row topspace">
			<div class="col-sm-8 col-sm-offset-2">

<div id="respond">
         <% if @picture.errors.any? %>
             <% @picture.errors.full_messages.each do |msg| %>
              <div id="errormessage"><%= msg %></div>
             <% end %>
         <% end %>

          <%= form_with(model: @picture , local:true , url: new_or_edit ,id: :commentform) do |form| %>
             <%= form.label :Photo %>
             <div class="field">

    
              <%= image_tag(@picture.image.url) if @picture.image.url %>
              <%= form.file_field :image, id: :picture_image %>
              <%= form.label :remove_image %>
              <%= form.check_box :remove_image %>
              <%= form.hidden_field :image_cache %>
             </div>
             <div class="form-group">
              	<label for="inputComment">Title</label>
               <%= form.text_field :title ,class:"form-control" %>
             </div>
             <div class="form-group">
              	<label for="inputComment">Comment</label>
               <%= form.text_area :comment ,class:"form-control" %>
             </div>
             
            <div class="text-center">
             <%= form.submit 'POST' , class:"btn btn-action"%>
            </div>
          <% end %>
   </div>
			</div>
		</div> 
		<div class="clearfix"></div>

